@model IEnumerable<ToDoWebsite.Models.Task>

@{
    ViewData["Title"] = "Index";
}

<h1>Tasks</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Title)</th>
            <th>@Html.DisplayNameFor(model => model.Description)</th>
            <th>@Html.DisplayNameFor(model => model.DueDate)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (ToDoWebsite.Models.Task t in Model) {
        <tr>
            <td>@t.Title</td>
            <td>@t.Description</td>
            <td>@t.DueDate</td>
            <td>
                <a asp-action="Edit" asp-route-id="@t.TaskId">Edit</a> |
                <a asp-action="Details" asp-route-id="@t.TaskId">Details</a> |
                <a asp-action="Delete" asp-route-id="@t.TaskId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
