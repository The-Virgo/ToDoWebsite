@model IEnumerable<ToDoWebsite.Models.Task>


<div class="text-center">
    <h1 class="display-4">At a Glance</h1>
    <div class="row">
        <div class="col-sm-6">
            <div class="card" style="background-color: #212121; margin-top: 15px;">
                <div class="card-body">
                    <h5 class="card-title">To Do</h5>
                    <p class="card-text">
                        See what you need to catch up on
                    </p>
                    <a asp-area="" asp-controller="Task" asp-action="Index" class="btn" style="background-color: #6877d5;">Go</a>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card" style="background-color: #212121; margin-top: 15px;">
                <div class="card-body">
                    <h5 class="card-title">Completed</h5>
                    <p class="card-text">
                        Take a look at the tasks you've mastered
                    </p>
                    <a asp-area="" asp-controller="Task" asp-action="Finished" class="btn" style="background-color: #6877d5;">Go</a>
                </div>
            </div>
        </div>
    </div>

</div>
